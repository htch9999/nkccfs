            const confessionText = confession.confession || '';
            const timestamp = confession.timestamp;
            
            const replyMatch = confessionText.match(/<reply_(#nkccfs\d{3})>(.*)/s);
            let displayText = confessionText;
            let replyTag = '';
            
            if (replyMatch) {
